{
  "version": 2,
  "buildCommand": "echo 'Building static files...'",
  "outputDirectory": ".",
  "public": true,
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/style.css",
      "dest": "/style.css",
      "headers": { "Content-Type": "text/css" }
    },
    {
      "src": "/script.js", 
      "dest": "/script.js",
      "headers": { "Content-Type": "application/javascript" }
    },
    {
      "src": "/logo.svg",
      "dest": "/logo.svg", 
      "headers": { "Content-Type": "image/svg+xml" }
    },
    {
      "src": "/favicon.svg",
      "dest": "/favicon.svg",
      "headers": { "Content-Type": "image/svg+xml" }
    },
    {
      "src": "/favicon-32x32.svg",
      "dest": "/favicon-32x32.svg",
      "headers": { "Content-Type": "image/svg+xml" }
    },
    {
      "src": "/favicon-16x16.svg", 
      "dest": "/favicon-16x16.svg",
      "headers": { "Content-Type": "image/svg+xml" }
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 